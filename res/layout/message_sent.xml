<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="8dp"
    android:background="@drawable/message_bubble_background"
    tools:backgroundTint="@color/core_dark_05">

    <LinearLayout
        android:id="@+id/group_sender_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <org.thoughtcrime.securesms.components.emoji.EmojiTextView
            android:id="@+id/group_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="4sp"
            android:paddingRight="4sp"
            android:textAllCaps="true"
            android:textAppearance="@style/Signal.Text.Caption.MessageSent"
            tools:text="+14152222222"
            tools:visibility="visible" />

        <org.thoughtcrime.securesms.components.emoji.EmojiTextView
            android:id="@+id/group_message_sender_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="4sp"
            android:paddingRight="4sp"
            android:textAllCaps="true"
            android:textAppearance="@style/Signal.Text.Caption.MessageSent"
            tools:text="~Clement Duval" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/group_sender_holder"
        app:layout_constraintTop_toBottomOf="@+id/group_sender_holder">

        <org.thoughtcrime.securesms.components.QuoteView
            android:id="@+id/quote_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/group_sender_holder"
            app:layout_constraintTop_toBottomOf="@+id/group_sender_holder"
            app:message_type="incoming"
            tools:visibility="gone" />

        <ViewStub
            android:id="@+id/shared_contact_view_stub"
            android:layout_width="@dimen/media_bubble_max_width"
            android:layout_height="wrap_content"
            android:layout="@layout/conversation_item_shared_contact"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/group_sender_holder"
            app:layout_constraintTop_toBottomOf="@+id/group_sender_holder" />

        <ViewStub
            android:id="@+id/image_view_stub"
            android:layout_width="@dimen/media_bubble_default_dimens"
            android:layout_height="@dimen/media_bubble_default_dimens"
            android:layout="@layout/conversation_item_sent_thumbnail"
            app:layout_constraintStart_toStartOf="@+id/group_sender_holder"
            app:layout_constraintTop_toBottomOf="@+id/group_sender_holder" />

        <ViewStub
            android:id="@+id/audio_view_stub"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout="@layout/conversation_item_sent_audio"
            app:layout_constraintStart_toStartOf="@+id/group_sender_holder"
            app:layout_constraintTop_toBottomOf="@+id/group_sender_holder" />

        <ViewStub
            android:id="@+id/document_view_stub"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout="@layout/conversation_item_sent_document"
            app:layout_constraintStart_toStartOf="@+id/group_sender_holder"
            app:layout_constraintTop_toBottomOf="@+id/group_sender_holder" />

        <org.thoughtcrime.securesms.components.emoji.EmojiTextView
            android:id="@+id/conversation_item_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent sit amet sollicitudin sapien, vitae lobortis mi." />

    </LinearLayout>

    <TextView
        android:id="@+id/conversation_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:autoLink="none"
        android:linksClickable="false"
        android:textAppearance="@style/Signal.Text.Caption.MessageSent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_container"
        tools:text="Now"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/sim_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:autoLink="none"
        android:linksClickable="false"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingTop="1dip"
        android:textAppearance="@style/Signal.Text.Caption.MessageSent"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/insecure_indicator"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/conversation_item_date"
        app:layout_constraintTop_toBottomOf="@+id/content_container"
        tools:text="from SIM1"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/insecure_indicator"
        android:layout_width="12dp"
        android:layout_height="11dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:alpha=".65"
        android:contentDescription="@string/conversation_item__secure_message_description"
        android:src="@drawable/ic_unlocked_white_18dp"
        android:tint="?conversation_item_sent_text_secondary_color"
        android:tintMode="multiply"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_status"
        app:layout_constraintEnd_toStartOf="@+id/expiration_indicator"
        app:layout_constraintTop_toBottomOf="@+id/content_container"
        tools:visibility="visible" />

    <org.thoughtcrime.securesms.components.ExpirationTimerView
        android:id="@+id/expiration_indicator"
        android:layout_width="8dp"
        android:layout_height="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/delivery_status"
        app:layout_constraintEnd_toStartOf="@+id/delivery_status"
        app:layout_constraintTop_toBottomOf="@+id/content_container" />

    <org.thoughtcrime.securesms.components.DeliveryStatusView
        android:id="@+id/delivery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@+id/content_container"
        app:layout_constraintTop_toBottomOf="@+id/content_container" />

</android.support.constraint.ConstraintLayout>